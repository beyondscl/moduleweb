<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.4//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bird.dao.UserDao">
    <insert id="saveObject" parameterType="com.bird.domain.User">
        INSERT into user
        (
        id, name, password)
        values
        (
        #{id}, #{name}, #{password})
    </insert>
    <update id="updateObject" parameterType="com.bird.domain.User">
        update user set
        <if test='null != id'>
            id = #{ id} ,
        </if>
        <if test='null != name'>
            name = #{ name} ,
        </if>
        <if test='null != password'>
            password = #{ password}
        </if>

        where id = #{id}
    </update>
    <delete id="deleteById" parameterType="java.lang.String">
        delete from user
        where id =#{id}
    </delete>
    <delete id="deleteByIds">
        delete from user
        where id IN
        <foreach collection="array" item="id" index="index"
                 open="(" close=")" separator=",">
            #{id}
        </foreach>
    </delete>
    <select id="findById" parameterType="java.lang.String"
            resultType="com.bird.domain.User">
        select
        id, name, password
        from user
        where id =#{id}
    </select>
    <select id="findByIds" resultType="com.bird.domain.User">
        select
        id, name, password
        from user
        where id IN
        <foreach collection="array" item="id" index="index"
                 open="(" close=")" separator=",">
            #{id}
        </foreach>
    </select>
    <select id="findByObject" parameterType="com.bird.domain.User"
            resultType="com.bird.domain.User">
        select
        id, name, password
        from user
        where 1=1
        <if test='null != id'>
            and id = #{id},
        </if>
        <if test='null != name'>
            and name = #{name},
        </if>
        <if test='null != password'>
            and password = #{password}
        </if>

    </select>
</mapper> 
